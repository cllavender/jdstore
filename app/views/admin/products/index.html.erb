
<div class="col-md-12">
  <h2>商品列表</h2>
  <div class="group" style="padding-bottom: 20px;">
    <%= link_to("新增商品", new_admin_product_path, class: "btn btn-primary btn-sm pull-right") %>
  </div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <td>#</td>
        <th width="220">图片</th>
        <td>品名</td>
        <td>库存</td>
        <td>价格</td>
        <td width="100">操作选项</td>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <td>
            <%= link_to admin_product_path(product) do %>
              <% if product.image.present? %>
                <%= image_tag(product.image.url(:thumb), class: "thumbnail") %>
              <% else %>
                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
              <% end %>
            <% end %>
          </td>
          <td><%= product.title %></td>
          <td><%= product.quantity %></td>
          <td><%= product.price %></td>
          <td>
              <%= link_to("Edit", edit_admin_product_path(product))%> |
              <%= link_to("Delete", admin_product_path(product),method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
